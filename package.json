{
  "name": "vcoin",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "NODE_ENV=production ts-node src/index.ts",
    "start:dev": "NODE_ENV=development ts-node src/index.ts",
    "build": "tsc",
    "create-token": "NODE_ENV=production ts-node src/create-token.ts",
    "create-token:dev": "NODE_ENV=development ts-node src/create-token.ts",
    "allocate-token": "NODE_ENV=production ts-node src/allocate-token.ts",
    "allocate-token:dev": "NODE_ENV=development ts-node src/allocate-token.ts",
    "update-metadata": "NODE_ENV=production ts-node src/update-metadata.ts",
    "update-metadata:dev": "NODE_ENV=development ts-node src/update-metadata.ts",
    "presale": "NODE_ENV=production ts-node src/presale.ts",
    "presale:dev": "NODE_ENV=development ts-node src/presale.ts",
    "vesting": "NODE_ENV=production ts-node src/vesting.ts",
    "vesting:dev": "NODE_ENV=development ts-node src/vesting.ts",
    "authority": "NODE_ENV=production ts-node src/authority-controls.ts",
    "authority:dev": "NODE_ENV=development ts-node src/authority-controls.ts",
    "authority:init": "NODE_ENV=production ts-node src/authority-controls.ts init",
    "authority:check": "NODE_ENV=production ts-node src/authority-controls.ts check",
    "authority:upgrade": "NODE_ENV=production ts-node src/authority-controls.ts upgrade",
    "authority:backup": "NODE_ENV=production ts-node src/authority-controls.ts backup",
    "upgrade": "NODE_ENV=production ts-node src/upgrade-governance.ts",
    "upgrade:dev": "NODE_ENV=development ts-node src/upgrade-governance.ts",
    "upgrade:check": "NODE_ENV=production ts-node src/upgrade-governance.ts check",
    "type-check": "node scripts/show-errors.js",
    "lint": "eslint src --ext .ts",
