    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.0",
    "axios": "^1.8.4",
    "borsh": "^2.0.0",
    "bs58": "^6.0.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.3.0",
    "proper-lockfile": "^4.1.2",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@metaplex-foundation/js": "^0.20.1",
